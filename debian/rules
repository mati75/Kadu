#!/usr/bin/make -f

DEB_TAR_SRCDIR			:= kadu

include /usr/share/cdbs/1/rules/simple-patchsys.mk
include /usr/share/cdbs/1/rules/tarball.mk
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/autotools.mk

DEB_COMPRESS_EXCLUDE		:= AUTHORS THANKS LICENSE about-changes-tab.txt

makebuilddir/kadu::
	sh debian/extract.sh $(CURDIR) $(DEB_BUILDDIR)
	find . -name '*.o' -delete

install/kadu::
	cp $(DEB_DESTDIR)/usr/share/kadu/ChangeLog debian/kadu/usr/share/doc/kadu/about-changes-tab.txt

clean::
	rm -f kadu*.cdbs-config_list

