<?xml version="1.0" encoding="UTF-8"?>
<configuration-ui>
	<section name="Notifications">
		<tab name="Sound">
			<group-box name="General">
				<check-box caption="Use sounds" config-section="Sounds" config-item="PlaySound" id="sound/use" />
				<action-button caption="Test sound playing" id="sound/testPlay" />
			</group-box>
			<group-box name="Theme" id="sound/theme">
				<combo-box caption="Sound theme" config-section="Sounds" config-item="SoundTheme" id="sound/themes" />
				<path-list-edit caption="Sound paths" config-section="Sounds" config-item="SoundPaths" id="soundPaths" />
			</group-box>
			<group-box name="Volume" id="sound/volume">
				<check-box caption="Enable volume control (player must support it)" config-section="Sounds" config-item="VolumeControl" id="sound/enableVolumeControl" />
				<slider caption="Volume" config-section="Sounds" config-item="SoundVolume" min-value="0" max-value="100" page-step="20" id="sound/volumeControl" />
			</group-box>
		</tab>
	</section>
</configuration-ui>
